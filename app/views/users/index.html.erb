<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr class="<%= cycle('list_line_odd','list_line_even')%>">
      <th>Username</th>
      <th>Password</th>
      <th>Phone</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr class="<%= cycle('list_line_odd','list_line_even')%>">
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= user.phone %></td>
        <td><%= truncate(strip_tags(user.address), length:50) %></td>
        <td class="list_actions"><%= link_to 'Show', user %></td>
        <td class="list_actions"><%= link_to 'Edit', edit_user_path(user) %></td>
        <td class="list_actions"><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

